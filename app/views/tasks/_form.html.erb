  <div class="row">
     <div class="row">
    <div class="col-xs-12 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6"></div>

  </div>

    <%= form_for(task) do |f|%>
      <% if task.errors.any? %>
        <div id="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %> 

      <div class="form-group">
        <%= f.label :content, 'タスク'%>
        <%= f.text_field :content, class: 'form-control' %>
         <div class="row">
           <div class="col-xs-12"></div>
           <div class="col-sm-offset-2 col-md-8"></div>
           <div class="col-lg-6"></div>
         </div>
      </div>  

      <div class="form-group">
        <%= f.label :status, 'ステータス'%>
        <%= f.select :status, [['対応前','対応前' ], ['対応中','対応中'], ['完了', '完了']], class: 'form-control' %>
         <div class="row">
           <div class="col-xs-12"></div>
           <div class="col-sm-offset-2 col-sm-8"></div>
           <div class="col-lg-offset-3 col-lg-6"></div>
         </div>
      </div>
      <%= f.submit '登録', class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>