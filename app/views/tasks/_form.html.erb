  <div class="row">
     <div class="row">
       <div class="col-xs-12"></div>
       <div class="col-sm-8 col-sm-offset-2"></div>
       <div class="col-lg-6 col-lg-offset-3"></div>
     </div>
  </div>

    <%= form_for(task) do |f|%>
      <% if task.errors.any? %>
        <div id="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %> 

      <div class="form-group">
        <%= f.label :content, 'タスク'%>
        <%= f.text_field :content, class: 'form-control' %>
      </div>  

      <div class="form-group">
        <%= f.label :status, 'ステータス'%>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
      <%= f.submit '登録', class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>